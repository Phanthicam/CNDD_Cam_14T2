<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.cam.timepicker_datepicker.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_bgTitle"
        android:gravity="center"
        android:padding="@dimen/margin_small"
        android:text="Quản lý công việc hằng tuần"
        android:textColor="@color/color_white"
        android:textSize="@dimen/text_size_medium" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_medium"
        android:layout_marginLeft="@dimen/margin_small"
        android:layout_marginRight="@dimen/margin_small"
        android:layout_marginTop="@dimen/margin_small"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center|left"
            android:text="Công việc:"
            android:textSize="@dimen/text_size_medium" />

        <EditText
            android:id="@+id/edt_cong_viec"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="@dimen/text_size_medium" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_medium"
        android:layout_marginLeft="@dimen/margin_small"
        android:layout_marginRight="@dimen/margin_small"
        android:layout_marginTop="@dimen/margin_small"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center|left"
            android:text="Nội dung:"
            android:textSize="@dimen/text_size_medium" />

        <EditText
            android:id="@+id/edt_noi_dung"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="@dimen/text_size_medium" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_medium"
        android:layout_marginLeft="@dimen/margin_small"
        android:layout_marginRight="@dimen/margin_small"
        android:layout_marginTop="@dimen/margin_small">

        <TextView
            android:id="@+id/tv_ngayHT"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center|left"
            android:text="Ngày HT:"
            android:textSize="@dimen/text_size_medium" />

        <TextView
            android:id="@+id/tv_day"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@id/btn_date"
            android:layout_toRightOf="@id/tv_ngayHT"
            android:gravity="center|left"
            android:paddingLeft="@dimen/margin_small"
            android:textColor="@color/color_red"
            android:textSize="@dimen/text_size_medium" />

        <Button
            android:id="@+id/btn_date"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:text="Date"
            android:textAllCaps="false"
            android:textSize="@dimen/text_size_medium" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_medium"
        android:layout_marginLeft="@dimen/margin_small"
        android:layout_marginRight="@dimen/margin_small"
        android:layout_marginTop="@dimen/margin_small"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_gioHT"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center|left"
            android:text="Giờ HT:"
            android:textSize="@dimen/text_size_medium" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@id/btn_time"
            android:layout_toRightOf="@id/tv_gioHT"
            android:gravity="center|left"
            android:paddingLeft="@dimen/margin_small"
            android:textColor="@color/color_red"
            android:textSize="@dimen/text_size_medium" />

        <Button
            android:id="@+id/btn_time"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:text="Time"
            android:textAllCaps="false"
            android:textSize="@dimen/text_size_medium" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_gray" />

    <Button
        android:id="@+id/btn_themCV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/margin_small"
        android:text="Thêm CV"
        android:textAllCaps="false"
        android:textSize="@dimen/text_size_medium" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_bgTitle"
        android:gravity="center|left"
        android:padding="@dimen/margin_small"
        android:text="Danh sách công việc:"
        android:textColor="@color/color_white"
        android:textSize="@dimen/text_size_medium" />

    <ListView
        android:id="@+id/list_view_congviec"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
